<h1><%= name %></h1>
<div class='shopping-cart'>
  <header>
    <h1>Your Cart</h1>
  </header>
  <main class='cart-body'>
    <ul class='cart-list'>
      <li>
        <div class='cart-item' data-dish='id'>
          <span class='dish-name'>Dim Sum</span>
          <span class='dish-price'>$10.00</span>
          <button>-</button><span class='dish-quantity'>1</span><button>+</button>
          <button>Remove</button>
        </div>
      </li>
      <li>
        <div class='cart-item' data-dish='id'>
          <span class='dish-name'>Noodles</span>
          <span class='dish-price'>$8.00</span>
          <button>-</button><span class='dish-quantity'>1</span><button>+</button>
          <button>Remove</button>
        </div>
      </li>
      <li>
        <div class='cart-item' data-dish='id'>
          <span class='dish-name'>Rice</span>
          <span class='dish-price'>$12.00</span>
          <button>-</button><span class='dish-quantity'>1</span><button>+</button>
          <button>Remove</button>
        </div>
      </li>
    </ul>
  </main>
  <footer>
    <h5>Total Price:</h5>
    <span class='cart-price'>$30.00</span>
    <form class='cart-submit'>
      Phone number: <input type='text' name='phone' placeholder='1-250-XXX-XXXX'>
      <br><input type='submit' value='Submit Order'>
    </form>
    <button class='cart-clear'>Empty Cart</button>
  </footer>
</div>
